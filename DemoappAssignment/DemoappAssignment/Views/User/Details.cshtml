
@model DemoappAssignment.Models.Userdetails
@{
    ViewBag.Title = "Details";
}


<h2>Show User details</h2>
<div style="background-color: antiquewhite; ">
    <div class="divmessage">   <span class="text-danger" id="spanid">@ViewBag.ErrorMessage </span></div>
    <div>

        @Html.Label("Select Email", new { htmlAttributes = new { @class = "label label-default" } })

        @Html.DropDownList("ddlEmails", Session["Emaillist"] as SelectList, new { htmlAttributes = new { @class = "select" } })

    </div>


    <div style="height:23px;">

    </div>

    <div id="divuserdetails" style="display:none" class="table-secondary">
        <table border="1" cellspacing="20" style="margin-left:20px">

            <tr>
                <td>@Html.DisplayNameFor(model => model.FirstName)</td>
                <td id="tdFirstname"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.LastName)</td>
                <td id="tdlastname"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Birthdate)</td>
                <td id="tdbirthdate"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.MobileNumber)</td>
                <td id="tdmobile"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Email)</td>
                <td id="tdemail"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.City)</td>
                <td id="tdcity"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.Country)</td>
                <td id="tdcountry"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.temperature)</td>
                <td id="tdtemp"></td>
            </tr>
            <tr>
                <td>@Html.DisplayNameFor(model => model.weathersummary)</td>
                <td id="tdweathersummary"></td>
            </tr>

        </table>


    </div>

</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Scripts/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/userdetails.js"></script>

<style>
    .divmessage {
        height: 55px;
        text-align: center;
        font-size: medium;
    }

    select {
        appearance: auto;
        outline: 0;
        background-image: none;
        width: 100%;
        height: 100%;
        cursor: pointer;
        border: 2px solid darkseagreen;
        border-radius: 10px;
        margin-left: 20px;
    }


    table, th, td {
        border: 2px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding-top: 10px;
        padding-bottom: 20px;
        padding-left: 30px;
        padding-right: 40px;
        text-align:center;
    }

    label {
        margin-left: 20px;
    }
</style>